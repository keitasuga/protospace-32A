.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    %ul.dropdown-menu-location
    -if user_signed_in? && current_user.id == prototype.user.id
      %li.list
        = link_to 'EDIT', edit_prototype_path(prototype), method: :get, class: 'btn'
      %li.list
        = link_to 'DELETE', edit_prototype_path(prototype), method: :delete, class: 'btn-1'
    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          = link_to prototype.user.name, user_path(prototype.user)
        .proto-posted
          = prototype.posted_date




